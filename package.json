{
  "name": "posts",
  "version": "1.0.0",
  "description": "",
  "main": "app/server.ts",
  "directories": {
    "test": "tests"
  },
  "nyc": {
    "all": false,
    "include": [
      "app/**"
    ],
    "exclude": [
      "**/migrations/**",
      "app/config/**"
    ]
  },
  "scripts": {
    "start": "tsc && node dist/app/server.js",
    "prestart": "npm run migrate:up",
    "dev": "nodemon app/server.ts",
    "pretest": "cross-env NODE_ENV=test npm run lint && npm run migrate-test:down && npm run migrate-test:up",
    "test": "cross-env NODE_ENV=test nyc --require ts-node/register --reporter=lcov --reporter=text --reporter=text-summary mocha --exit --recursive --timeout=150000 tests/**/*.ts",
    "lint": "eslint . --ext .ts ./",
    "lint-fix": "eslint . --ext .ts ./ --fix",
    "migrate:up": "db-migrate up",
    "migrate:down": "db-migrate down -c 100",
    "migrate-test:up": "db-migrate up --config database.json -e test",
    "migrate-test:down": "db-migrate down -c 100 --config database.json -e test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lawrecks/posts.git"
  },
  "author": "Lawrecks",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lawrecks/posts/issues"
  },
  "homepage": "https://github.com/lawrecks/posts#readme",
  "dependencies": {
    "app-root-path": "^3.1.0",
    "bcrypt": "^5.1.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.20.2",
    "chai": "^4.3.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "file-stream-rotator": "^1.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "mocha": "^10.2.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "pg-promise": "^11.5.4",
    "prettier": "^3.0.2",
    "sinon": "^15.2.0",
    "supertest": "^6.3.3",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.5",
    "@types/bcrypt": "^5.0.0",
    "@types/bluebird": "^3.5.38",
    "@types/chai": "^4.3.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.4",
    "@types/sinon": "^10.0.16",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
